
create database DB_WATCHSHOP;
USE DB_WATCH_SHOP;
CREATE TABLE PRODUCTS
(
    ID           INT AUTO_INCREMENT PRIMARY KEY,
    NAME         VARCHAR(255),
    FK_BRAND     INT,
    FK_GENDER    INT,
    COUNTRY      VARCHAR(255),
    FK_COLOR     INT,
    IMAGE_LINK   VARCHAR(255),
    QUANTITY     INT,
    PRICE        DECIMAL,
    UPDATED_USER VARCHAR(255),
    UPDATED_TIME TIMESTAMP,
    CREATED_USER VARCHAR(255),
    CREATED_TIME TIMESTAMP,
    IS_DELETED   INT
);
CREATE TABLE SYSTEM_PARAMETERS
(
    ID           INT AUTO_INCREMENT PRIMARY KEY,

    NAME         VARCHAR(255),
    CATEGORIES   VARCHAR(255),
    DESCRIPTIONS VARCHAR(255),
    UPDATED_USER VARCHAR(255),
    UPDATED_TIME TIMESTAMP,
    CREATED_USER VARCHAR(255),
    CREATED_TIME TIMESTAMP,
    IS_DELETED   INT
);
CREATE TABLE COMPANY_INFO
(
    ID           INT AUTO_INCREMENT PRIMARY KEY,

    NAME         VARCHAR(255),
    ADDRESS      VARCHAR(255),
    DESCRIPTIONS VARCHAR(255),
    PHONE        VARCHAR(255),
    UPDATED_USER VARCHAR(255),
    UPDATED_TIME TIMESTAMP,
    CREATED_USER VARCHAR(255),
    CREATED_TIME TIMESTAMP,
    IS_DELETED   INT
);
CREATE TABLE ORDERS
(
    ID           INT AUTO_INCREMENT PRIMARY KEY,

    NAME         VARCHAR(255),
    ADDRESS      VARCHAR(255),
    DESCRIPTIONS VARCHAR(255),
    PHONE        VARCHAR(255),
    QUANTITY     INT,
    TOTAL_PRICE  DECIMAL,
    UPDATED_TIME TIMESTAMP,
    CREATED_TIME TIMESTAMP,
    IS_DELETED   INT
);

CREATE TABLE ORDER_DETAILS
(
    ID             INT AUTO_INCREMENT PRIMARY KEY,

    FK_ORDER_ID    INT,
    FK_ORDER_STATE INT,
    FK_PRODUCT_ID  INT,
    QUANTITY       INT,
    ORDER_PRICE    DECIMAL,
    UPDATED_TIME   TIMESTAMP,
    CREATED_TIME   TIMESTAMP,
    IS_DELETED     INT
);
